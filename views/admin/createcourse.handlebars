{{#if course}}
<form action="/admin/courses/{{course.id}}?_method=PUT" method="POST">
{{else}}
<form action="/admin/courses" method="POST">
{{/if}}
  <div class="form-group">
    <label for="name">課程名稱</label>
    <input type="text" class="form-control" name="name" id="name" placeholder="輸入課程名稱" value="{{course.name}}" required {{#if course}} readonly {{/if}}>
  </div>

  <div class="form-group">
    <label for="time">上課時長</label>
    <select class="form-control" name="time" id="time" value="{{course.time}}">
      {{#each timeList}}
      <option value="{{this.time}}" 
        {{#ifCond ../course.time this.time}} 
          selected 
        {{/ifCond}}>{{this.time}}分鐘
      </option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="type">計費方式</label>
    <select class="form-control" name="type" id="type" value="{{course.type}}">
      {{#each typeList}}
      <option value="{{this.type}}" 
        {{#ifCond ../course.type this.type}} 
          selected 
        {{/ifCond}}>{{this.type}}
      </option>
      {{/each}}
    </select>
  </div>
  
  <div class="form-group">
    <label for="amounts">堂數</label>
    <input type="number" class="form-control" name="amounts" id="amounts" min="1" max="36" value="{{course.amounts}}" placeholder="輸入堂數" required {{#if course}} readonly {{/if}}>
  </div>

  <div class="form-group">
    <label for="price">價錢</label>
    <input type="number" class="form-control" name="price" id="price" min="0" value="{{course.price}}" placeholder="輸入價格" required>
  </div>

  <div class="form-group">
    <label for="teacherId">授課老師</label>
    <select class="form-control" id="teacherId" name="teacherId">
      {{#each teachers}}
      <option value="{{this.id}}" 
        {{#ifCond this.id ../course.TeacherId}} 
          selected
        {{/ifCond}}>{{this.name}}
      </option>
      {{/each}}
    </select>
  </div>

  <button type="submit" class="btn btn-primary">送出資料</button>
</form>