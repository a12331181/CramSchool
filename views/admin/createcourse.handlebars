<form action="/admin/courses" method="POST">
  <div class="form-group">
    <label for="name">課程名稱</label>
    <input type="text" class="form-control" name="name" id="name" placeholder="輸入課程名稱" required>
  </div>

  <div class="form-group">
    <label for="time">上課時長</label>
    <select class="form-control" name="time" id="time" required>
      <option value="30">30分鐘</option>
      <option value="60">60分鐘</option>
      <option value="90">90分鐘</option>
      <option value="120">120分鐘</option>
    </select>
  </div>

  <div class="form-group">
    <label for="type">計費方式</label>
    <select class="form-control" name="type" id="type" required>
      <option value="依月計費">依月計費</option>
      <option value="依堂數計費">依堂數計費</option>
    </select>
  </div>
  
  <div class="form-group">
    <label for="amounts">堂數</label>
    <select class="form-control" name="amounts" id="amounts" required>
      <option value="6">6</option>
      <option value="8">8</option>
      <option value="12">12</option>
      <option value="16">16</option>
      <option value="18">18</option>
      <option value="24">24</option>
      <option value="30">30</option>
      <option value="NA">不計堂數</option>
    </select>
  </div>

  <div class="form-group">
    <label for="price">價錢</label>
    <input type="number" class="form-control" name="price" id="price" min="0" placeholder="輸入價格" required>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>