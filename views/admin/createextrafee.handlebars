{{#if extrafee}}
<h3><strong>修改額外費用</strong></h3>
<form action="/admin/extrafees/{{extrafee.id}}?_method=PUT" method="POST">
{{else}}
<h3><strong>建立新的額外費用</strong></h3>
<form action="/admin/extrafees" method="POST">
{{/if}}
  <div class="form-group">
    <label for="name">名稱</label>
    <input type="text" class="form-control" name="name" id="name" value="{{extrafee.name}}" required >
  </div>

  <div class="form-group">
    <label for="price">價錢</label>
    <input type="number" class="form-control" name="price" id="price" value="{{extrafee.price}}" max="10000" min="0" required>
  </div>

  <button type="submit" class="btn btn-primary">送出資料</button>
</form>

