<br />

<h1>{{course.name}}</h1>
<h4 class="ml-2" style="color: rgb(182, 190, 202)">課程行事曆</h4>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">上課日期</th>
      <th scope="col">課程內容</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each calendars}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.date}}</td>
      <td>{{this.content}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/courses/{{this.id}}/calendar/edit">
            修改行事曆
          </a>
        </button>
        <form action="/admin/courses/{{this.id}}/calendar?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">刪除行事曆</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</table>

<br />
<br />

<a href='/admin/courses/{{course.id}}/calendar/create'>
  <button type="button" class="btn btn-primary">建立新的課程行事曆</button>
</a>

