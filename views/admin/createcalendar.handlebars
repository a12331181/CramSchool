<form action="/admin/courses/calendar/create" method="POST">
  <div class="form-group">
    <label for="courseId">課程ID</label>
    <input type="number" class="form-control" name="courseId" id="courseId" value="{{courseId}}" readonly>
  </div>

  <div class="form-group">
    <label for="date">日期</label>
    <input type="date" class="form-control" name="date" id="date" value="{{calendar.date}}" required>
  </div>

  <div class="form-group">
    <label for="content">上課內容</label>
    <input type="text" class="form-control" name="content" id="content" value="{{calendar.content}}"
        placeholder="輸入上課內容.." maxlength="40" required>
    <small id="contentHelp" class="form-text text-muted">字數不能超過40個！</small>
  </div>

  <button type="submit" class="btn btn-primary">送出資料</button>
</form>

