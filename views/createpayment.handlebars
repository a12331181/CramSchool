<h1>建立收費表</h1>

<form action="/cramschool/payment/create" method="POST">
  <div class="form-group">
    <label for="EnrollmentId">EnrollmentId</label>
    <input type="number" class="form-control" name="EnrollmentId" id="EnrollmentId" value="{{enrollment.id}}" readonly>
  </div>

  <div class="form-group">
    <label for="time">日期</label>
    <input type="date" class="form-control" name="time" id="time" required>
  </div>

  <div class="form-group">
    <label for="amount">總金額</label>
    <input type="number" class="form-control" name="amount" id="amount" value="{{course.price}}" required>
  </div>
  
  <div class="form-group">
    <label for="isPaid">繳費狀態</label>
    <select class="form-control" name="isPaid" id="isPaid" value="{{payment.isPaid}}">
      <option value="false">未繳費</option>
      <option value="true">已繳費</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">送出資料</button>
</form>

