<h3 class="ml-2" style="color: rgb(75, 66, 57);">教師日誌列表</h3>

<table class="table table-bordered">
  <thead>
    <tr class="table-primary">
      <th scope="col">#</th>
      <th scope="col">日期</th>
      <th scope="col">主題</th>
      <th scope="col">課程</th>
      <th scope="col">教師</th>
      {{#if isAdmin}}
      <th scope="col">#</th>
      {{/if}}
    </tr>
  </thead>
  <tbody>
    {{#each diaries}}
    <tr class="table-light">
      <th scope="row">{{this.id}}</th>
      <td>{{this.date}}</td>
      <td><a href="/cramschool/courses/{{this.Course.id}}/diaries/{{this.id}}">{{this.subject}}</a></td>
      <td style="color: rgb(211, 146, 60);">{{this.Course.name}}</td>
      <td style="color: rgb(124, 150, 199);">{{this.Course.Teacher.name}}</td>
      {{#if ../isAdmin}}
      <td>
        <form action="/cramschool/diaries/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-sm btn-danger">刪除</button>
        </form>
      </td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>

<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <li class="page-item">
      <a class="page-link" href="/cramschool/diaries?page={{prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each totalPage}}
    {{#ifCond this ../page}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item"><a class="page-link" href="/cramschool/diaries?page={{this}}">{{this}}</a></li>
    {{/ifCond}}
    {{/each}}
    <li class="page-item">
      <a class="page-link" href="/cramschool/diaries?page={{next}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>

