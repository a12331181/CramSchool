{{#if isTeacher}}
<form action="/users/{{user.id}}?_method=PUT" method="POST">
{{else}}
<form action="/users/{{user.id}}" method="POST">
{{/if}}
  <div class="form-group">
    <label for="name">教師名稱</label>
    <input type="text" class="form-control" name="name" id="name" placeholder="輸入教師名稱.." value="{{user.Teacher.name}}"
      required>
  </div>
  
  <div class="form-group">
    <label for="sex">性別</label>
    <select class="form-control" name="sex" id="sex">
      <option value="男">男</option>
      <option value="女">女</option>
    </select>
  </div>
  
  <div class="form-group">
    <label for="birth">生日</label>
    <input type="date" class="form-control" name="birth" id="birth" value="{{user.Teacher.birth}}" placeholder="輸入出生年月日.."
      required>
  </div>
  
  <div class="form-group">
    <label for="phone">聯絡方式</label>
    <input type="text" class="form-control" name="phone" id="phone" value="{{user.Teacher.phone}}" placeholder="輸入聯絡方式.."
      required>
  </div>
  
  <div class="form-group">
    <label for="address">聯絡地址</label>
    <input type="text" class="form-control" name="address" id="address" value="{{user.Teacher.address}}"
      placeholder="輸入聯絡地址.." required>
  </div>
  
  <div class="form-group">
    <label for="education">最高學歷</label>
    <input type="text" class="form-control" name="education" id="education" value="{{user.Teacher.education}}"
      placeholder="輸入最高學歷.." required>
  </div>
  
  <div class="form-group">
    <label for="school">學校</label>
    <input type="text" class="form-control" name="school" id="school" value="{{user.Teacher.school}}" placeholder="輸入學校.."
      required>
  </div>
  {{#if isTeacher}}
  <button type="submit" class="btn btn-primary">更新個人資料</button>
  {{else}}
  <button type="submit" class="btn btn-primary">新增個人資料</button>
  {{/if}}
</form>