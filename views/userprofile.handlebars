<div class="card mb-3" style="max-width: 1200px">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.Teacher.image}}" class="img-fluid rounded-start" alt="..." style="width:400px; height:400px">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><strong>{{user.Teacher.name}}</strong></h4>
        <p class="card-text"><strong>性別 : </strong>{{user.Teacher.sex}}</p>
        <p class="card-text"><strong>生日 : </strong>{{user.Teacher.birth}}</p>
        <p class="card-text"><strong>電話 : </strong>{{user.Teacher.phone}}</p>
        <p class="card-text"><strong>信箱 : </strong>{{user.email}}</p>
        <p class="card-text"><strong>地址 : </strong>{{user.Teacher.address}}</p>
        <p class="card-text"><strong>最高學歷 : </strong>{{user.Teacher.education}}</p>
        <p class="card-text"><strong>學校 : </strong>{{user.Teacher.school}}</p>
        {{#if userIsMatch}}
        <a href="/users/{{user.id}}/edit">
          <button type="button" class="btn btn-primary">新增/修改個人資料</button>
        </a>
        {{/if }}
      </div>
    </div>
  </div>
</div>